<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/colorPrimary</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BigBlackTitleTextStyle">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="SmallBlackTitleTextStyle">
        <item name="fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallBlackDescriptionTextStyle">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallWhiteTitleTextStyle">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>